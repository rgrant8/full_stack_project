  var chart = $('#container').highcharts();
  $("table tr a.delete").click(function (e) {
    var series = chart.series[$(this).closest('td').parent()[0].sectionRowIndex];
    if (series.visible) {
      series.remove();//hide();
    }else{
      series.show();
    }
  });
