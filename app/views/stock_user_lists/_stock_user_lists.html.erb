<% results = Array.new %>
<% count = 0 %>
<% while count <= $popular_stocks.size %> 
  <% if win_get = yahoo_client.quotes([$popular_stocks[count], "NATU3.SA", "USDJPY=X"], [:symbol, :change, :change_in_percent]) %>
    <% symbol = win_get[0].symbol %>
